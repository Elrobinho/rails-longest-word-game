<h1>Welcome to this game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter.capitalize %></li>
    <% end %>
</ul>

<form action="/score" method="get">
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
